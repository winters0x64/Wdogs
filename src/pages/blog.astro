---
import BaseLayout from '../layouts/BaseLayout.astro'
const allPosts = await Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const pageTitle = "Blog";
---
<BaseLayout pageTitle={pageTitle}>
    <h1 class="text-purple-600 text-9xl font-bold mb-8">{pageTitle}</h1>
    {allPosts.map((post: any) => <li class="text-2xl text-blue-600"><a href={post.url}>{post.frontmatter.title}</a></li>)}
</BaseLayout>