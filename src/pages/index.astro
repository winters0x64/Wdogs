---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
	<div id="landing_container">

		<div id="main_title">
			<img src="/winters.png" alt="">
		</div>

		<div id="pfp_container">
			<img src="/pfp.png" alt="">
		</div>
	</div>

</BaseLayout>

<style>
	#pfp_container img {
		border-radius: 50%;
	}


	#main_title {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: center;
		height: 30%;
		width: 100%;
	}

	#pfp_container {
		display: flex;
		justify-content: center;
		height: 70%;
		width: 100%;
	}

	#landing_container {
		display: flex;
		flex-direction: column;
		height: 100%;
		width: 100%;
	}
</style>