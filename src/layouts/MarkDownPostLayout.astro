---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
import '../styles/global.css';
---

<div class="w-[70%] mx-auto p-4 min-h-screen flex flex-col">
  <BaseLayout pageTitle={frontmatter.title}>
    <h2 class="text-3xl">{frontmatter.description}</h2>
    <h2 class="text-2xl">{frontmatter.pubDate.toString().slice(0,10)}</h2>
    <h2 class="text-xl">Written by: {frontmatter.author}</h2>
    <div class="tags">
      {frontmatter.tags.map((tag: string) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
    </div>
    <slot />
  </BaseLayout>
</div>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>